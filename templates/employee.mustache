{{# employee}}
    <h1>Karta osoby: {{ name }} {{ surname }}</h1>
    <dl class='dl-horizontal'>
        <dt>Jméno</dt>
        <dd>{{name}}</dd>
        <dt>Příjmení</dt>
        <dd>{{surname}}</dd>
        <dt>Pozice</dt>
        <dd>{{job}}</dd>
        <dt>Mzda</dt>
        <dd>{{wage}}</dd>
        <dt>Domovská místnost</dt>
        <dd><a href="{{ roomDetail }}?roomId={{ room_id }}">{{r_name}}</a></dd>
        <dt>Klíče</dt>
        {{# keys}}
            <dd><a href="{{ roomDetail }}?roomId={{ room_id }}">{{name}}</a></dd>
        {{/keys}}
    </dl>
{{/employee}}
